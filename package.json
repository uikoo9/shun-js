{
  "name": "shun-js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "author": "uikoo9 <uikoo9@qq.com>",
  "homepage": "https://github.com/uikoo9/shun-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uikoo9/shun-js.git"
  },
  "bugs": {
    "url": "https://github.com/uikoo9/shun-js/issues"
  },
  "scripts": {
    "prepare": "husky",
    "build": "lerna run build",
    "prettier": "qpro prettier",
    "eslint": "qpro eslint",
    "lint": "npm run build && npm run prettier && npm run eslint",
    "cz": "qpro commitizen",
    "pb": "lerna publish",
    "graph": "nx graph",
    "update": "qpro ncu u && npm -ws exec -- qpro ncu u",
    "pkg": "qpro pkg ./packages",
    "dpkg": "qpro pkg ./packages dev",
    "clean": "nx reset",
    "start:feishu-bot": "cd configs && shunjs start @shun-js/feishu-bot",
    "start:feishu-grafana-alert": "cd configs && shunjs start @shun-js/feishu-grafana-alert",
    "build:aitubiao-web": "npm run build -w @shun-js/aitubiao-web && npm run upload -w @shun-js/aitubiao-web"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "lerna": "^9.0.3",
    "lint-staged": "^16.2.7",
    "nx": "^22.2.7",
    "qiao-cos-cli": "^5.0.1",
    "qiao-project": "^5.0.2",
    "qiao-webpack": "^5.0.1"
  }
}
